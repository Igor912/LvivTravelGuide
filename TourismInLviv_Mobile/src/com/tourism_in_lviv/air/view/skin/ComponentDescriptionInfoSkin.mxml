<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.tourism_in_lviv.air.view.ui.component.ComponentDescriptionInfo")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.tourism_in_lviv.air.model.dto.PlaceDTO;
		]]>
	</fx:Script>

	<s:Scroller left="0" right="0" top="0" bottom="0">
		<s:VGroup width="100%">
			<s:HGroup width="100%" height="{this.height/2}" horizontalAlign="center">
				<s:BorderContainer id="imgContainer"
								   left="7"
								   right="7"
								   top="7"
								   bottom="7"
								   height="100%"
								   width="100%">
					<s:Image id="img"
							 fillMode="scale"
							 scaleMode="zoom"
							 width="100%"
							 height="100%"/>
				</s:BorderContainer>
			</s:HGroup>
			<s:Label id="lblTitle"
					 width="100%"
					 backgroundColor="0xda4336"
					 backgroundAlpha="0.5"
					 fontSize="16"
					 fontWeight="bold"
					 paddingLeft="5"
					 paddingRight="5"
					 paddingTop="5"
					 paddingBottom="5"/>
			<s:Label id="lblDescription"
						paddingLeft="14"
						paddingRight="14"
						fontSize="12"
						width="100%"
						maxDisplayedLines="80"/>
			<s:HGroup width="100%" 
					  paddingLeft="14"
					  paddingRight="14">
				<s:Label id="lblAddressLabel"
						 width="30%"
						 fontSize="14"
						 fontWeight="bold"
						 text="Як знайти: "
						 paddingBottom="7"/>
				<s:Label id="lblAddressValue"
						 width="100%"
						 fontSize="14"
						 fontWeight="bold"
						 paddingLeft="7"/>
			</s:HGroup>
		</s:VGroup>
	</s:Scroller>
</s:Skin>
